# Agent Provider Configuration
# Options: openai, anthropic, echo
AGENT_PROVIDER=openai

# OpenAI Configuration
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# Anthropic Configuration (if using Anthropic agent)
# Get your API key from https://console.anthropic.com/
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Model Configuration
# OpenAI: gpt-3.5-turbo, gpt-4, gpt-4-turbo-preview, etc.
# Anthropic: claude-3-5-sonnet-20241022, claude-3-opus-20240229, etc.
MODEL=gpt-3.5-turbo

# Generation Parameters
MAX_TOKENS=500
TEMPERATURE=0.7

# ngrok Configuration
# Get your token from https://dashboard.ngrok.com/get-started/your-authtoken
NGROK_AUTH_TOKEN=your-ngrok-auth-token-here

# Set to "false" to disable ngrok tunnel
USE_NGROK=true

# Debug Mode
# Set to "true" to enable Flask debug mode
DEBUG=false
